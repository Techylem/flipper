{
    "productName": "flipper",
    "directories": {
      "output": "release/"
    },
    "publish": {
      "provider": "github",
      "owner": "streamupbox",
      "repo": "flipper",
      "vPrefixedTagName": true
    },
    "files": [
      "**/*",
      "!*.ts",
      "!*.code-workspace",
      "!LICENSE.md",
      "!package.json",
      "!package-lock.json",
      "!src/",
      "!e2e/",
      "!hooks/",
      "!.angular-cli.json",
      "!_config.yml",
      "!karma.conf.js",
      "!tsconfig.json",
      "!tslint.json"
      
    ],
    "win": {
      "icon": "dist",
      "target": ["nsis"],
      "arch": [
        "x64",
        "ia32"
      ]
    },
    "mac": {
      "icon": "dist",
      "target": ["dmg","zip"]
    },
    "linux": {
      "icon": "dist",
      "target": ["AppImage"]
    }
  }